<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        >

        <ImageView
            android:src="@drawable/logo7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"/>

        <TextView android:text="@string/TextMoviendose"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"

            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:background="@color/white"
             />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/DialButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/telefono1"
            android:scaleType="fitXY"
            android:background="@color/white"/>


        <ImageButton
            android:id="@+id/IncidenciaButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/averias"
            android:scaleType="fitXY"
            android:onClick="IncidenciaButtonPulsado"
            android:background="@color/white"/>




        <ImageButton
            android:id="@+id/EmailButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mail"
            android:scaleType="fitXY"
            android:background="@color/white"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/WebButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/web"
            android:scaleType="fitXY"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/scaButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/logo7"
            android:scaleType="fitXY"
            android:background="@color/white"/>

        <ImageButton
            android:id="@+id/IncidenciaButton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/documentos"
            android:scaleType="fitXY"
            android:onClick="IncidenciaButtonPulsado"
            android:background="@color/white"/>

    </LinearLayout>



</LinearLayout>