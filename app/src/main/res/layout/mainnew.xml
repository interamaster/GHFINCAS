<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logoMainPulsar"
            android:src="@drawable/logo7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:onClick="PulsadoLogobutton"/>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMPRESA"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#013A6E"/>


            <ImageButton
                android:id="@+id/EmpresaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_empresa"
                android:scaleType="fitCenter"
                android:background="@color/white"

                android:onClick="PulsadoBotonEmpresa"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="PROVEEDOR"
                android:textColor="#013A6E"
                android:textSize="12sp"
                android:gravity="center"/>


            <ImageButton
                android:id="@+id/ProveedoresButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_proveedores1"
                android:scaleType="fitCenter"
                android:background="@color/white"
                android:onClick="ProveedoresButtonPulsado"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="COMUNICA2"
                android:textColor="#013A6E"
                android:textSize="12sp"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/comunicadoplusadobutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_comunicados"
                android:scaleType="fitCenter"
                android:onClick="comunicadoplusadobutton"
                android:background="@color/white"/>


        </LinearLayout>






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="COMUNIDAD"
                android:textColor="#013A6E"
                android:textSize="12sp"
                android:gravity="center"/>

            <ImageButton

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_comunidad"
                android:scaleType="fitCenter"
                android:background="@color/white"
                android:onClick="ComunidadBotonPulsado"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="INCIDENCIAS"
                android:textColor="#013A6E"
                android:textSize="12sp"
                android:gravity="center"/>



            <ImageButton
                android:id="@+id/IncidenciaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_incidencias1"
                android:scaleType="fitCenter"
                android:onClick="IncidenciaButtonPulsado"
                android:background="@color/white"/>


        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/white"
        >

        <TextView android:text="@string/TextMoviendose"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"

            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_width="wrap_content"
            android:layout_height="25sp"
            android:background="@color/white"
            />

    </LinearLayout>



</LinearLayout>