<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:background="@drawable/shadow_rectangle"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/LOGOPROVEEDOR"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NOMBRE DE LA EMPRESA"
        android:textColor="#000000"
        android:id="@+id/EMPRESAPROVEEDOR"
        android:layout_below="@+id/LOGOPROVEEDOR"
        android:layout_alignLeft="@+id/LOGOPROVEEDOR"
        android:layout_alignStart="@+id/LOGOPROVEEDOR"
        android:layout_marginTop="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Descripcind e la emprsa"
        android:id="@+id/DESCRIPCIONPROVEEDOR"
        android:layout_below="@+id/EMPRESAPROVEEDOR"
        android:layout_alignLeft="@+id/EMPRESAPROVEEDOR"
        android:layout_alignStart="@+id/EMPRESAPROVEEDOR" />

</RelativeLayout>