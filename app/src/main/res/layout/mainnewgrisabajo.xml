<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/logoMainPulsar"
            android:src="@drawable/logo7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:onClick="PulsadoLogobutton"/>

        <ImageButton
            android:id="@+id/helpbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/flat_help1"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
           android:layout_margin="20dp"


            android:onClick="HelpPulsado"/>


    </FrameLayout>


    <!-- del Telefono-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"

        android:background="#013A6E"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewTelefonoMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/flat_24h"
                android:scaleType="fitCenter"
                android:onClick="TelefonoPulsadoMain"/>


        </LinearLayout>



        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_gravity="left"
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TELEFONOS DE CONTACTO"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:onClick="TelefonoPulsadoMain"/>


            <TextView
                android:layout_gravity="left"
                android:id="@+id/TextView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIJO:955-51-47-69"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:onClick="TelefonoPulsadoMain"/>
            <TextView
                android:layout_gravity="left"
                android:id="@+id/TextView311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MOVIL(24h):673-78-71-75"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:onClick="TelefonoPulsadoMain"/>


        </LinearLayout>


        <!-- del email-->


        <LinearLayout
            android:id="@+id/secohnd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#2A8Ac5">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/horario"
                android:scaleType="fitCenter"
                />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#2A8Ac5">

            <TextView
                android:layout_gravity="left"
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HORARIO OFICINA"
                android:textSize="15sp"
                android:textColor="@color/white"
                />


            <TextView
                android:layout_gravity="left"
                android:id="@+id/TextView312"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunes-Jueves:9:30-13:30 y 17:00-20:00"
                android:textSize="10sp"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_gravity="left"
                android:id="@+id/TextView3112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viernes:9:30-13:30"
                android:textSize="10sp"
                android:textColor="@color/white"
                />


        </LinearLayout>


    </LinearLayout>





    <!-- de los botones de abajo-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"

        android:background="#4F4E5E">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMPRESA"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/white"/>


            <ImageButton
                android:id="@+id/EmpresaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_empresa"
                android:scaleType="fitCenter"
                android:background="#4F4E5E"

                android:onClick="PulsadoBotonEmpresa"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="PROVEEDOR"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>


            <ImageButton
                android:id="@+id/ProveedoresButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_proveedores1"
                android:scaleType="fitCenter"
                android:background="#4F4E5E"
                android:onClick="ProveedoresButtonPulsado"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="COMUNICA2"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/comunicadoplusadobutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_comunicados"
                android:scaleType="fitCenter"
                android:onClick="comunicadoplusadobutton"
                android:background="#4F4E5E"/>


        </LinearLayout>






        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="COMUNIDAD"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/sucomunidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_comunidad"
                android:scaleType="fitCenter"
                android:background="#4F4E5E"
                android:onClick="ComunidadBotonPulsado"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="INCIDENCIA"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>



            <ImageButton
                android:id="@+id/IncidenciaButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/flat_incidencias1"
                android:scaleType="fitCenter"
                android:onClick="IncidenciaButtonPulsado"
                android:background="#4F4E5E"/>


        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="#4F4E5E"
        >

        <TextView android:text="@string/TextMoviendose"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="@color/white"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_width="wrap_content"
            android:layout_height="25sp"

            />

    </LinearLayout>



</LinearLayout>